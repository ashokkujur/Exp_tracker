<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:background="@drawable/adapter_background_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBudgetAdapterCategory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:gravity="center|start|left"
            android:text="test"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvBudgetAdapterAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/text_vew_amount_background"
            android:gravity="center"
            android:padding="5dp"
            android:minWidth="50dp"
            android:text="100"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>